@{
    ViewData["Title"] = "Error";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="error-container text-center">
                <div class="error-icon mb-3">
                    <i class="fas fa-exclamation-triangle"></i>
                </div>
                
                <h2 class="error-title mb-3">
                    Oops! Something went wrong
                </h2>
                
                <p class="error-message mb-4">
                    @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
                    {
                        @ViewBag.ErrorMessage
                    }
                    else
                    {
                        <text>We encountered an unexpected error. Please try again.</text>
                    }
                </p>
                
                <div class="error-actions">
                    <a href="javascript:history.back()" class="btn btn-outline-primary me-3">
                        <i class="fas fa-arrow-left me-2"></i>Go Back
                    </a>
                    <a href="@Url.Action("Menu", "Customer")" class="btn btn-success">
                        <i class="fas fa-home me-2"></i>Back to Menu
                    </a>
                </div>
                
                <div class="mt-4">
                    <small class="text-muted">
                        If this problem persists, please contact our support team.
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>

<link rel="stylesheet" href="~/css/customer/error.css?v=@DateTime.Now.Ticks">
