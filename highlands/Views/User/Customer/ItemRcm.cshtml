@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mining Association Rules</title>
</head>
<body>
    <h1>Khai thác luật kết hợp sản phẩm</h1>

    <button id="loadResultsBtn">Tải Kết Quả</button>

    <h2>Kết quả luật kết hợp:</h2>
    <table id="resultTable">
        <thead>
            <tr>
                <th>Antecedents</th>
                <th>Consequents</th>
                <th>Support</th>
                <th>Confidence</th>
                <th>Lift</th>
            </tr>
        </thead>
        <tbody>
        </tbody>
    </table>

<script>
    document.getElementById('loadResultsBtn').addEventListener('click', async function() {
    const response = await fetch('http://127.0.0.1:5000/get_mining_results', {
        method: 'GET',
        headers: {
            'Content-Type': 'application/json'
        }
        });
    const result = await response.json();

    if (!result.association_rules || result.association_rules.length === 0) {
        alert('Không có luật kết hợp nào được tìm thấy.');
        return;
    }

    const tableBody = document.getElementById('resultTable').getElementsByTagName('tbody')[0];
    tableBody.innerHTML = '';

        result.association_rules.forEach(rule => {
            const row = tableBody.insertRow();
            row.innerHTML = `
                <td>${rule.antecedents.join(', ')}</td>
                <td>${rule.consequents.join(', ')}</td>
                <td>${rule.support}</td>
                <td>${rule.confidence}</td>
                <td>${rule.lift}</td>
            `;
        });
    });
</script>
</body>
</html>
