@{
    var successMessage = TempData["SuccessMessage"] as string ?? Context.Session.GetString("SuccessMessage");
    var errorMessage = TempData["ErrorMessage"] as string ?? Context.Session.GetString("ErrorMessage");
}
@if (TempData["SuccessMessage"] != null)
{
    <div id="flash-message" class="success-message">
        @TempData["SuccessMessage"]
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div id="flash-message" class="error-message">
        @TempData["ErrorMessage"]
    </div>
}
<link rel="stylesheet" href="~/css/notification/notification.css?v=@DateTime.Now.Ticks">
<script>
    // Display message for 2 seconds before starting fade-out
    setTimeout(function () {
        var flashMessages = document.querySelectorAll('#flash-message');
        flashMessages.forEach(function (message) {
            message.classList.add('fade-out');
            setTimeout(function () {
                message.style.display = 'none';
            }, 1000); // Remove after fade completes
        });
    }, 2000);
</script>